<div class="folio-section folio-{{this.class-name}}">
	<div class="folio-section-one">
		<span class="folio-section__title">{{this.title}}</span>
	</div>
	<div class="folio-section-two">
    {{#this.text}}
      <div class="folio-section__content">{{{this}}}</div>
    {{/this.text}}

    {{#if images}}
      <div class="folio-section__images">
        {{#images}}
          <div class="folio-section__image-wrapper">
            <a href={{this.link-url}} class="folio-section__image-link">
              <img src={{this.image-url}} class="folio-section__image" />
            </a>
            <div>
              <a href={{this.link-url}} class="folio-section__image-name">
                {{this.name}}
              </a>
              {{#if this.extra}}
                {{#this.extra}}
                  <p class="folio-section__image-name-extra">{{this}}</p>
                {{/this.extra}}
              {{/if}}
            </div>
          </div>
        {{/images}}
      </div>
    {{/if}}

    {{#if soundclouds}}
      <div class="folio-section__sounds">
        {{#soundclouds}}
          <div class="folio-section__sound-wrapper">
            <div class="iframe-wrapper">
              <iframe class="soundcloud-iframe" width="300" height="200" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/{{track-id}}&color=%23ffb6c1&auto_play=false&hide_related=true&show_comments=false&show_user=true&show_reposts=false&show_teaser=true&visual=true&sharing=false"></iframe>
            </div>
            <div class="folio-section__sound-description">
              <span>{{description}}</span>
            </div>
          </div>
        {{/soundclouds}}
      </div>
    {{/if}}

    {{#if bandcamp-embed}}
      <div class="folio-section__bandcamp">
        <iframe style="border: 0; width: 100%; height: 120px;" src={{bandcamp-embed-url}} seamless><a href={{bandcamp-album-url}}>{{bandcamp-embed-title}}</a></iframe>
      </div>
    {{/if}}
	</div>
</div>
